{
  "name": "lib-starter",
  "version": "1.0.0",
  "description": "rollup starter lib",
  "private": true,
  "keywords": [
    "lib",
    "starter"
  ],
  "homepage": "https://github.com/enpenguc/monorepo-starter#readme",
  "bugs": {
    "url": "https://github.com/enpenguc/monorepo-starter/issues"
  },
  "license": "ISC",
  "author": "enpeng <enpenguc@163.com>",
  "files": [
    "src",
    "dist"
  ],
  "entry": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/types/index.d.ts",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enpenguc/monorepo-starter.git"
  },
  "dependencies": {
    "ms": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/ms": "^0.7.31",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "preinstall": "node ./scripts/checkYarn.js",
    "postinstall": "husky install",
    "pretest": "npm run build",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "node test/test.js",
    "prettier": "prettier --write '**/*.{ts,tsx,json,md}' --config .prettierrc.yml",
    "lint-fix": "eslint --fix ./src --ext .js,.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --config .prettierrc.yml",
      "eslint --fix"
    ]
  }
}
